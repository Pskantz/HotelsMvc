@model IEnumerable<HotelApp.Models.Hotel>

<h1>Hotels</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Image</th>
            <th>Booked</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hotel in Model)
        {
            <tr>
                <td>@hotel.Name</td>
                <td><img src="@hotel.ImageUrl" alt="@hotel.Name" class="img-fluid" width="100" /></td>
                <td>@(hotel.IsBooked ? "Yes" : "No")</td>
                <td>
                    @if (!hotel.IsBooked)
                    {
                        <form asp-action="BookHotel" method="post">
                            <input type="hidden" name="id" value="@hotel.Id" />
                            <button type="submit" class="btn btn-success">Book</button>
                        </form>
                    }
                    else
                    {
                        <button class="btn btn-success" disabled>Booked</button>
                    }
                    <a href="@Url.Action("EditHotel", new { id = hotel.Id })" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("AddHotel")" class="btn btn-primary">Add Hotel</a>
