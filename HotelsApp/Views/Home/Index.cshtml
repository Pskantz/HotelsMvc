@model List<HotelApp.Models.Hotel>

<h1>Hotels</h1>

<a asp-action="AddHotel" class="btn btn-primary">Add Hotel</a>

@if (Model.Count == 0)
{
    <p>No hotels added yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Booked</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hotel in Model)
            {
                <tr>
                    <td>@hotel.Name</td>
                    <td>
                        <img src="@hotel.ImageUrl" alt="@hotel.Name" width="100" />
                    </td>
                    <td>@(hotel.IsBooked ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
}
