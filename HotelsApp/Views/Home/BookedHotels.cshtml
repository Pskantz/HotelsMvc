@model IEnumerable<HotelApp.Models.Booking>

<h1>Booked Hotels</h1>

<table class="table">
    <thead>
        <tr>
            <th>Hotel</th>
            <th>Room Type</th>
            <th>Price</th>
            <th>Check-In</th>
            <th>Check-Out</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Hotel?.Name</td>
                <td>@booking.RoomType</td>
                <td>@booking.Price</td>
                <td>@booking.CheckIn.ToShortDateString()</td>
                <td>@booking.CheckOut.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("EditBooking", new { id = booking.Id })" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteBooking" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@booking.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>