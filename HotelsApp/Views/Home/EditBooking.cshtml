@model HotelApp.Models.Booking
<h1>Edit Booking</h1>

<form method="post">
    <div class="form-group">
        <label for="CheckIn">Check In</label>
        <input type="date" class="form-control" id="CheckIn" name="CheckIn" value="@Model.CheckIn" required />
    </div>
    <div class="form-group">
        <label for="CheckOut">Check Out</label>
        <input type="date" class="form-control" id="CheckOut" name="CheckOut" value="@Model.CheckOut" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>