@model HotelApp.Models.Booking

<h1>Edit Booking</h1>

<form method="post">
    <div class="form-group">
        <label for="CustomerName">Customer Name</label>
        <input type="text" class="form-control" id="CustomerName" name="CustomerName" value="@Model.CustomerName" readonly />
    </div>
    <div class="form-group">
        <label for="Hotel">Hotel</label>
        <input type="text" class="form-control" id="Hotel" name="Hotel" value="@Model.Hotel?.Name ?? "" " readonly />
    </div>
    <div class="form-group">
        <label for="RoomType">Room Type</label>
        <select class="form-control" id="RoomType" name="RoomType" required>
            <option value="Single" selected="@(Model.RoomType == "Single")">Single</option>
            <option value="Double" selected="@(Model.RoomType == "Double")">Double</option>
            <option value="Suite" selected="@(Model.RoomType == "Suite")">Suite</option>
        </select>
    </div>
    <div class="form-group">
        <label for="CheckIn">Check-In Date</label>
        <input type="date" class="form-control" id="CheckIn" name="CheckIn" value="@Model.CheckIn.ToString("yyyy-MM-dd")" required />
    </div>
    <div class="form-group">
        <label for="CheckOut">Check-Out Date</label>
        <input type="date" class="form-control" id="CheckOut" name="CheckOut" value="@Model.CheckOut.ToString("yyyy-MM-dd")" required />
    </div>
    <div class="form-group">
        <label for="Price">Price per Night</label>
        <input type="number" class="form-control" id="Price" name="Price" value="@Model.Price" readonly />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>
