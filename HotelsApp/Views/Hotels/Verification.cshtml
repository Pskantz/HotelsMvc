@using HotelApp.Models
@model BookViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Verification</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <h1>Verification</h1>
        <p>Name: @Model.Name</p>
        <p>Email: @Model.Email</p>
        <p>Hotel: @Model.Hotel</p>
        <p>Check-In: @Model.CheckIn.ToShortDateString()</p>
        <p>Check-Out: @Model.CheckOut.ToShortDateString()</p>
    </div>
</body>
</html>